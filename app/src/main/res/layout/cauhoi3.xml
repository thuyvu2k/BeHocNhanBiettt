<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/anhnencauhoi">

    <ImageView
        android:background="@drawable/anhnencauhoi_burned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
       />

    <TextView
        android:background="@drawable/botron"
        android:id="@+id/txtCauHoi"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="Đâu là con vịt"
        android:textAlignment="inherit"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
    android:layout_marginLeft="10dp"
                android:id="@+id/daa"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:background="@drawable/bovien"
                android:onClick="OnClick"
                android:text="Dap an B" />

            <ImageButton
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bovien"
                android:onClick="OnClick"
                android:id="@+id/dac"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:text="dap an A" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton


                android:background="@drawable/bovien"
                android:onClick="OnClick"
                android:id="@+id/dab"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:text="Dap an C" />

            <ImageButton
                android:layout_marginTop="5dp"
                android:background="@drawable/bovien"
                android:onClick="OnClick"
                android:id="@+id/dad"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:text="Dap an D" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

